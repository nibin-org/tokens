{
  "name": "tokvista",
  "version": "1.2.0",
  "description": "Interactive visual documentation for design tokens.",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "sideEffects": [
    "**/*.css"
  ],
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/nibin-org/tokvista.git"
  },
  "homepage": "https://github.com/nibin-org/tokvista#readme",
  "bugs": {
    "url": "https://github.com/nibin-org/tokvista/issues"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs",
      "default": "./dist/index.js"
    },
    "./styles.css": {
      "import": "./dist/styles.css",
      "require": "./dist/styles.css",
      "default": "./dist/styles.css"
    }
  },
  "workspaces": [
    "demo"
  ],
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsup && node scripts/postbuild.cjs",
    "dev": "tsup --watch",
    "prepublishOnly": "npm run build",
    "typecheck": "tsc --noEmit",
    "test": "vitest run"
  },
  "keywords": [
    "figma",
    "design-tokens",
    "tokens",
    "design-system",
    "storybook",
    "styleguide",
    "react",
    "documentation",
    "style-dictionary",
    "token-studio",
    "figma-tokens",
    "design-tokens-visualizer",
    "ui-tokens",
    "css-variables",
    "design-ops",
    "design-system-docs",
    "color-palette",
    "spacing-scale",
    "tailwind-tokens"
  ],
  "author": {
    "name": "Nibin Kurian",
    "url": "https://www.linkedin.com/in/nibin-kurian"
  },
  "license": "MIT",
  "peerDependencies": {
    "react": ">=18.0.0",
    "react-dom": ">=18.0.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "happy-dom": "^20.5.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tsup": "^8.0.0",
    "typescript": "^5.0.0",
    "vitest": "^4.0.18",
    "vitest-axe": "^0.1.0"
  }
}
